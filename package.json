{
  "name": "keybuddy",
  "version": "0.2.1",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "email": "elvin.d@outlook.com",
    "name": "Elvin Dzhavadov"
  },
  "repository": "https://github.com/elv1n/keybuddy",
  "scripts": {
    "start": "cross-env NODE_ENV=development babel src --out-dir dist --extensions \".ts,.tsx\" --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "build": "rimraf ./dist && npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "cross-env NODE_ENV=development babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "preversion": "yarn build",
    "browse": "watchify -r ./dist/index.js:keybuddy -o public/bundle.js",
    "ws": "ws --spa index.html -d public",
    "e2e": "cypress open",
    "test": "yarn jest && yarn cypress run --browser chrome",
    "postversion": "node ./scripts/clone-pkg.js",
    "release": "np --contents dist"
  },
  "dependencies": {
    "invariant": "^2.2.4"
  },
  "devDependencies": {
    "@babel/cli": "7.5.0",
    "@babel/core": "7.5.4",
    "@babel/plugin-proposal-class-properties": "7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "7.5.4",
    "@babel/preset-env": "7.5.4",
    "@babel/preset-typescript": "^7.3.3",
    "@cypress/webpack-preprocessor": "^4.1.0",
    "@types/invariant": "^2.2.30",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.7",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "browserify": "^16.5.0",
    "build-react-library": "0.3.1",
    "clientside-require": "^4.7.2",
    "cross-env": "^5.2.0",
    "cypress": "^3.4.1",
    "eslint-config-elv1n-react": "0.3.1",
    "fs-extra": "8.1.0",
    "jest": "^24.9.0",
    "local-web-server": "^3.0.7",
    "rimraf": "^2.6.3",
    "typescript": "3.6.3",
    "watchify": "^3.11.1",
    "webpack": "^4.40.2"
  },
  "eslintConfig": {
    "extends": [
      "elv1n-react"
    ],
    "rules": {
      "@typescript-eslint/interface-name-prefix": [
        "error",
        "never"
      ],
      "no-restricted-syntax": "off"
    },
    "env": {
      "browser": true
    },
    "globals": {
      "cy": true,
      "Cypress": true
    }
  },
  "nyc": {
    "extension": [
      ".ts"
    ]
  }
}
