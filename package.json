{
  "name": "keybuddy",
  "version": "0.6.0",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "email": "elvin.d@outlook.com",
    "name": "Elvin Dzhavadov"
  },
  "repository": "https://github.com/elv1n/keybuddy",
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build": "tsup",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "e2e": "cypress open --component",
    "e2e:run": "cypress run --component",
    "test:all": "pnpm vitest run && pnpm e2e:run",
    "preversion": "pnpm build",
    "postversion": "node ./scripts/clone-pkg.js",
    "lint": "biome check . --write --unsafe",
    "release": "pnpm run postversion && np --contents dist"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^7.0.0",
    "@types/node": "24.3.0",
    "@vitest/ui": "^3.2.4",
    "cypress": "15.0.0",
    "jsdom": "^26.1.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
