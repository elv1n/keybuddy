{
  "name": "keybuddy",
  "version": "0.2.0-0",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "email": "elvin.d@outlook.com",
    "name": "Elvin Dzhavadov"
  },
  "repository": "https://github.com/elv1n/keybuddy",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "rimraf ./dist && npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "cross-env NODE_ENV=development babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "preversion": "yarn build",
    "browse": "yarn build:js && yarn browserify -r ./dist/index.js:keybuddy -o public/bundle.js",
    "ws": "ws --spa index.html -d public",
    "e2e": "cypress open",
    "postversion": "node ./scripts/clone-pkg.js",
    "release": "np --contents dist"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.5.0",
    "@babel/core": "7.5.4",
    "@babel/plugin-proposal-class-properties": "7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "7.5.4",
    "@babel/preset-env": "7.5.4",
    "@babel/preset-typescript": "^7.3.3",
    "@cypress/webpack-preprocessor": "^4.1.0",
    "@testing-library/dom": "5.6.0",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "browserify": "^16.5.0",
    "build-react-library": "0.3.1",
    "clientside-require": "^4.7.2",
    "cross-env": "^5.2.0",
    "cypress": "^3.4.1",
    "eslint-config-elv1n-react": "0.3.1",
    "fs-extra": "8.1.0",
    "keycode-js": "^1.0.4",
    "local-web-server": "^3.0.7",
    "rimraf": "^2.6.3",
    "typescript": "3.6.3",
    "webpack": "^4.40.2"
  },
  "eslintConfig": {
    "extends": [
      "elv1n-react"
    ],
    "rules": {
      "@typescript-eslint/interface-name-prefix": [
        "error",
        "never"
      ]
    },
    "env": {
      "browser": true
    },
    "globals": {
      "cy": true
    }
  },
  "nyc": {
    "extension": [
      ".ts"
    ]
  }
}
