{
  "name": "keybuddy",
  "version": "0.8.5",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "sideEffects": false,
  "keywords": [
    "keyboard",
    "shortcuts",
    "hotkeys",
    "keybindings",
    "keymaster",
    "key",
    "bindings",
    "typescript"
  ],
  "license": "MIT",
  "author": {
    "email": "elvin.d@outlook.com",
    "name": "Elvin Dzhavadov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elv1n/keybuddy"
  },
  "bugs": {
    "url": "https://github.com/elv1n/keybuddy/issues"
  },
  "homepage": "https://github.com/elv1n/keybuddy#readme",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "type-check": "tsc --noEmit && tsc --noEmit -p cypress/tsconfig.json",
    "type-check:watch": "tsc --noEmit --watch",
    "build": "tsup",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "vitest",
    "bench": "vitest bench",
    "e2e": "cypress open --component",
    "e2e:run": "cypress run --component",
    "test:all": "pnpm vitest run && pnpm e2e:run",
    "preversion": "pnpm build",
    "postversion": "node ./scripts/clone-pkg.js",
    "lint": "biome check . --write",
    "release": "pnpm run test:all && pnpm run postversion && np --contents dist"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@cypress/vite-dev-server": "^7.1.0",
    "@types/invariant": "^2.2.37",
    "@types/node": "25.0.9",
    "cypress": "15.9.0",
    "jsdom": "^27.4.0",
    "np": "^10.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "invariant": "^2.2.4"
  }
}
