{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": "off",
        "noInferrableTypes": "off",
        "noUselessElse": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "correctness": {
        "noEmptyPattern": "off"
      },
      "suspicious": {
        "noConsole": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": ["src/__test__/performance.bench.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    }
  ],
  "files": {
    "includes": ["src/**/*", "cypress/**/*", "*.js", "*.ts", "*.json"],
    "ignoreUnknown": false
  }
}
