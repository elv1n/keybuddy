{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": "off",
        "noInferrableTypes": "off",
        "noUselessElse": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "correctness": {
        "noEmptyPattern": "off"
      }
    }
  },
  "files": {
    "includes": ["src/**/*", "cypress/**/*", "*.js", "*.ts", "*.json"],
    "ignoreUnknown": false
  }
}
