{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "../",
    "types": ["cypress", "mocha", "node"],
    "noEmit": true,
    "isolatedModules": false,
    "allowJs": true,
    "lib": ["ES2022", "DOM"],
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}